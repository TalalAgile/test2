<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_employee_form_inherit_zk" model="ir.ui.view">
        <field name="name">hr.employee.form.inherit.zk</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='category_ids']" position="after">
                <group string="Attendance Machine">
                    <field name="zk_machine_id" placeholder="Machine User ID (e.g. 101)"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
