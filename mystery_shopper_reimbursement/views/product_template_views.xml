<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_mystery_shopper" model="ir.ui.view">
        <field name="name">product.template.form.inherit.mystery_shopper</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options']" position="inside">
                <span class="d-inline-block">
                    <field name="is_mystery_shopper_expense"/>
                    <label for="is_mystery_shopper_expense"/>
                </span>
            </xpath>
        </field>
    </record>
</odoo>
