<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_inherit_mystery_shopper" model="ir.ui.view">
        <field name="name">account.move.form.inherit.mystery_shopper</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_create_mystery_shopper_reimbursement" 
                        string="Create Reimbursement Bill" 
                        type="object" 
                        class="oe_highlight" 
                        groups="account.group_account_invoice"
                        invisible="move_type != 'out_invoice' or state != 'posted' or reimbursement_bill_id != False"/>
            </xpath>
            <xpath expr="//field[@name='payment_reference']" position="after">
                <field name="reimbursement_bill_id" invisible="move_type != 'out_invoice' or reimbursement_bill_id == False"/>
            </xpath>
        </field>
    </record>
</odoo>
