<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_account_payment_form_inherit_advance" model="ir.ui.view">
        <field name="name">account.payment.view.form.inherit.advance</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='memo']" position="after">
                <field
                    name="approval_request_id"
                    readonly="1"
                    invisible="not approval_request_id"
                />
                <field
                    name="salary_attachment_id"
                    readonly="1"
                    invisible="not salary_attachment_id"
                />
            </xpath>
        </field>
    </record>
</odoo>
