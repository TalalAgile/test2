<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Specific View for Sales (Read-only Account Type) -->
    <record id="view_account_statement_wizard_sales_form" model="ir.ui.view">
        <field name="name">account.statement.wizard.sales.form</field>
        <field name="model">account.statement.wizard</field>
        <field name="inherit_id" ref="account_statement_report.view_account_statement_wizard_form"/>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
             <xpath expr="//field[@name='account_type']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="action_account_statement_wizard_sales" model="ir.actions.act_window">
        <field name="name">Customer Statement of Account</field>
        <field name="res_model">account.statement.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_account_statement_wizard_sales_form"/>
        <field name="target">new</field>
        <field name="context">{'default_account_type': 'receivable', 'report_name': 'Customer Statement of account'}</field>
    </record>

    <menuitem id="menu_account_statement_sales_report"
              name="Customer Statement of account"
              parent="sale.menu_sale_report"
              action="action_account_statement_wizard_sales"
              groups="sales_team.group_sale_manager"
              sequence="50"/>
</odoo>
