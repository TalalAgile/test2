<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="account_statement_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="text-center mb-4">
                        <h2><span t-esc="report_name"/></h2>
                    </div>

                    <div class="row mb-4">
                        <div class="col-6">
                            <h3><span t-esc="partner.name"/></h3>
                            <span t-esc="partner" t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True}'/>
                        </div>
                        <div class="col-6 text-right">
                            <strong><span t-esc="labels['from']"/></strong> <span t-esc="date_from"/><br/>
                            <strong><span t-esc="labels['to']"/></strong> <span t-esc="date_to"/><br/>
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                         <div class="col-12">
                             <strong><span t-esc="labels['opening_balance']"/></strong> <span t-esc="opening_balance" t-options='{"widget": "monetary", "display_currency": company.currency_id}'/>
                         </div>
                    </div>

                    <table class="table table-sm table-bordered">
                        <thead class="thead-light">
                            <tr>
                                <th>Date</th>
                                <th>Type</th>
                                <th>Ref</th>
                                <th>Description</th>
                                <th class="text-right">Debit</th>
                                <th class="text-right">Credit</th>
                                <th class="text-right">Balance</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="docs" t-as="line">
                                <td><span t-esc="line['date']"/></td>
                                <td><span t-esc="line['move_type']"/></td>
                                <td><span t-esc="line['ref']"/></td>
                                <td><span t-esc="line['name']"/></td>
                                <td class="text-right"><span t-esc="line['debit']" t-options='{"widget": "monetary", "display_currency": company.currency_id}'/></td>
                                <td class="text-right"><span t-esc="line['credit']" t-options='{"widget": "monetary", "display_currency": company.currency_id}'/></td>
                                <td class="text-right"><span t-esc="line['balance']" t-options='{"widget": "monetary", "display_currency": company.currency_id}'/></td>
                            </tr>
                            <tr style="font-weight: bold; background-color: #f2f2f2;">
                                <td colspan="4" class="text-right">Balance</td>
                                <td class="text-right"><span t-esc="total_debit" t-options='{"widget": "monetary", "display_currency": company.currency_id}'/></td>
                                <td class="text-right"><span t-esc="total_credit" t-options='{"widget": "monetary", "display_currency": company.currency_id}'/></td>
                                <td class="text-right"><span t-esc="closing_balance" t-options='{"widget": "monetary", "display_currency": company.currency_id}'/></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>

    <record id="action_report_account_statement" model="ir.actions.report">
        <field name="name">Statement of Account</field>
        <field name="model">account.statement.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">account_statement_report.account_statement_template</field>
        <field name="report_file">account_statement_report.account_statement_template</field>
        <field name="binding_model_id" ref="model_account_statement_wizard"/>
        <field name="binding_type">report</field>
    </record>
</odoo>
