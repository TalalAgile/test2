<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_statement_wizard_form" model="ir.ui.view">
        <field name="name">account.statement.wizard.form</field>
        <field name="model">account.statement.wizard</field>
        <field name="arch" type="xml">
            <form string="Statement of Account">
                <group>
                    <group>
                        <field name="partner_id" options="{'no_create': True, 'no_open': True}"/>
                        <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/> 
                        <field name="account_type"/>
                    </group>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                        <field name="language"/>
                    </group>
                </group>
                <footer>
                    <button name="action_print_pdf" string="Print PDF" type="object" class="btn-primary"/>
                    <button name="action_print_excel" string="Print Excel" type="object" class="btn-primary" icon="fa-file-excel-o"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_account_statement_wizard" model="ir.actions.act_window">
        <field name="name">Statement of Account</field>
        <field name="res_model">account.statement.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
