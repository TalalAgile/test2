<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit_whatsapp_share" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.whatsapp.share</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_share_whatsapp_group" 
                        type="object" 
                        string="Share on WhatsApp" 
                        class="btn-success" 
                        icon="fa-whatsapp" 
                        invisible="state not in ['draft', 'sent', 'sale']"/>
            </xpath>
        </field>
    </record>
</odoo>
