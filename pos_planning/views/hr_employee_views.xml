<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_employee_view_form_inherit_pos_planning" model="ir.ui.view">
        <field name="name">hr.employee.view.form.inherit.pos.planning</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='hr_settings']" position="after">
                <page name="pos_planning" string="POS Planning" groups="point_of_sale.group_pos_user">
                    <group>
                        <field name="pos_config_ids" widget="many2many_tags" options="{'no_create': True}"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
